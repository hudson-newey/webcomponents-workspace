{
  "exclude": ["**/*.spec.*", "@types/**/*"],
  "include": ["**/*.ts"],
  "compilerOptions": {
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "target": "ES2022",
    "newLine": "lf",
    "module": "ESNext",
    "outDir": "js",
    "declarationDir": "@types",

    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,

    "experimentalDecorators": true,
    "useDefineForClassFields": false,

    "declaration": true
  }
}
